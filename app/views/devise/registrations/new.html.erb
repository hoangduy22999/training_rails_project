<body class="hold-transition login-page">
  <div>
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
  </div>
  <div class="login-box">
    <div class="login-logo">
      Exam App
    </div>
    <div class="login-box-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-group has-feedback">
          <%= f.text_field :name, class:'form-control', placeholder: "Name" %>
          <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
          <%= f.email_field :email, class:'form-control', placeholder: "Email" , autocomplete: "username"%>
          <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
          <%= f.password_field :password, class:'form-control', placeholder: "Password", autocomplete: "new-password" %>
          <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
          <%= f.password_field :password_confirmation, class:'form-control', placeholder: "Password Confirmation",  autocomplete: "confirmation-password" %>
          <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="row">
          <div class="col-xs-4">
            <%= f.submit "Sign Up", class: "btn btn-primary btn-block btn-flat"%>
          </div>
        </div>
      <% end %>
      <div class="ms-1 mt-2">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</body>