<div class="card card-info col-sm-8">
  <div class="card-header">
      <h3 class="card-title">Sign up</h3>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field form-group row">
      <%= f.label :name, class: 'col-sm-2 col-form-label'%>
      <div class='col-sm-10'>
          <%= f.text_field :name, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Name" %>
      </div>
    </div>

    <div class="field form-group row">
      <%= f.label :email, class: 'col-sm-2 col-form-label' %><br />
      <div class="col-sm-10">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "Email" %>
      </div>
    </div>

    <div class="field form-group row">
      <%= f.label :age, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-4">
        <%= f.number_field :age, autofocus: true, class: 'form-control', placeholder: 'Age' %>
      </div>
      <%= f.label :gender, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-4">
        <%= f.select(:gender, options_for_select([["male",1],["female",2],["other",3]]),{include_blank: "Select gender"}, {class: 'form-control', autofocus: true}) %>
      </div>
    </div>

    <div class = "field form-group row">
      <%= f.label :school_id, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= f.select(:school_id, options_for_select([]),{include_blank: "Select school"},{class: 'form-control',autofocus:true}) %>
      </div>
    </div>

    <div class="field form-group row">
      <%= f.label :password, class: 'col-sm-2 col-form-label' %><br />
      <div class="col-sm-10">
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: "Password" %>
      </div>
    </div>

    <div class="field form-group row">
      <%= f.label :password_confirmation, class: 'col-sm-2 col-form-label' %><br />
      <div class="col-sm-10">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Password Confirmation" %>
      </div>
    </div>
  </div>
  <div class="card-footer">
    <div class="actions">
      <%= f.submit "Sign up" , class: "btn btn-primary"%>You have a acount?
      <%= link_to "Sign in", signin_path %>
    </div>
  </div>
    <% end %>
</div>