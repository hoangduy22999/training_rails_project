<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
            <h3 class="card-title">Top</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
            <table class="table">
                <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>User</th>
                    <th>Result</th>
                    <th>Subject</th>
                    <th style="width: 100px">Time</th>
                </tr>
                </thead>
                <tbody>
                <% @result_top.each.with_index(1) do |top,index| %>
                <tr>
                    <td><%= index %>.</td>
                    <td><%= top.user_name %></td>
                    <td><%= top.value %></td>
                    <td><%= top.subject_name.capitalize %></td>
                    <td><%= show_time_result(top.time) %></td>
                </tr>
                <% end %>
                </tbody>
            </table>
            <%= link_to "Show more" , top_results_path %>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
            <h3 class="card-title">My Result</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
            <table class="table">
                <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>User</th>
                    <th>Result</th>
                    <th>Subject</th>
                    <th style="width: 100px">Time</th>
                </tr>
                </thead>
                <tbody>
                <% @my_result.each.with_index(1) do |top,index| %>
                <tr>
                    <td><%= index %>.</td>
                    <td><%= top.user_name %></td>
                    <td><%= top.value %></td>
                    <td><%= top.subject_name.capitalize %></td>
                    <td><%= show_time_result(top.time) %></td>
                </tr>
                <% end %>
                </tbody>                    
            </table>
            <%= link_to "Show more", mysubmitted_results_path %>
            </div>
        </div>
    </div>
</div>