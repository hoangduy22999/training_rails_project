<%= link_to 'Home', root_path %>
<%= form_for(@user,html: {class: "form-horizontal"}) do |f| %>
    <div class="card-body">
    <div class="form-group row">
    <%= f.label :name, for: 'inputEmail3', class: 'col-sm-2 col-form-label'%>
    <div class="col-sm-10">
    <%= f.text_field :name , id: 'inputEmail3', class: 'form-control', placeholder: 'name'  %>
    </div>
    </div>

    <div class="form-group row">
    <%= f.label :email, for: 'inputEmail3', class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= f.email_field :email, id: 'inputEmail3', class: 'form-control', placeholder: 'name@example.com' %>
    </div>
    </div>

    <%= f.label :school_id %>
    <%= f.select(:school_id, options_for_select([1])) %>

    <%= f.label :gender %>
    <%= f.select(:gender, options_for_select([["male"], ["female"], ["other"]])) %>

    <%= f.label :age %>
    <%= f.select(:age, options_for_select([["male"], ["female"], ["other"]])) %>

    <div class="form-group row">
    <%= f.label :password , for: 'inputPassword3', class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">            
    <%= f.password_field :password, class: 'form-control', id: 'inputPassword3', placeholder: 'password' %>
    </div>
    </div>

    <div class="form-group row">
    <%= f.label :password_confirmation , for: 'inputPassword3', class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">            
    <%= f.password_field :password_confirmation, class: 'form-control', id: 'inputPassword3', placeholder: 'password confirmation' %>
    </div>
    </div>

    <div class="card-footer">
    <%= f.submit "Create my account", class: "btn btn-primary" %>
    </div>
<% end %>