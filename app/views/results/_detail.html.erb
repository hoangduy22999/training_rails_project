<h3>Grade: </h3><h1 class="d-inline"><%= @grade %></h1>
<h3>Time: <%= show_time_in_hour(@result.time) %></h3>
<ul>
  <% @questions.each.with_index(1) do |question, index| %>
    <li><b><%= "Question #{index} : "%></b>
    <%= question.content %>
    <ul>
      <% if question.type_id == 1 %>
        <% question.answers.each do |answer| %>
            <% if @result.get_user_answer_correct(answer) %>
              <li><input type="checkbox" onclick="return false;" checked >
              <p class="d-inline <%= answer.correct ? "text-success" : "text-danger text-decoration-line-through" %>">
              <%= answer.content %></p>
            <% else %>
              <li><input type="checkbox" onclick="return false;">
              <p class="d-inline"><%= answer.content %></p>
            <% end %>
            </li>

        <% end %>
      <% else %>
          <li><p class="d-inline <%= @result.is_correct_write(question) ? "text-success" : "text-danger text-decoration-line-through"  %>">
              <%= @result.get_user_answer_content(question.answers.first) %><p></li>
          <% if !@result.is_correct_write(question) %>
            <li><p class="d-inline text-success"><%= question.get_answer_write %></p></li>
          <% end %>

      <% end %>
      
    </ul>
    </li>
  <% end %>
</ul>