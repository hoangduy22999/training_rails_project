<% if can? :create , @exam %>
<div class="row">
    <div class = "col-sm-8">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Create Exam</h3>
        </div>
    <div class="box-body">
      <div class="table-responsive">
        <table class="table no-margin">
          <thead>
          <tr>
            <th>Numbers</th>
            <th>Content</th>
            <th>Type</th>
            <th>Correct Answer</th>
          </tr>
          </thead>
          <tbody>
          <tr>
            <td>1</td>
            <td>1+1</td>
            <td><span class="label label-success">Shipped</span></td>
            <td>
              <div class="sparkbar" data-color="#00a65a" data-height="20">90,80,90,-70,61,-83,63</div>
            </td>
          </tr>

          </tbody>
        </table>
      </div>
    </div>
    <!-- /.box-body -->
    <div class="box-footer clearfix">
      <a href="" class="btn btn-sm btn-info btn-flat pull-left">Create Exam</a>
      <a href="" class="btn btn-sm btn-default btn-flat pull-right">Cancel</a>
    </div>
    <!-- /.box-footer -->
  </div>
</div>
    <div class = "col-sm-4">
        <div>
          <%= form_tag(question_search_path, method: "get", remote: true) do %>
              <%= text_field_tag :search, params[:search], placeholder: "Enter search term" %>
              <%= submit_tag "Search" %>
          <% end %>
        </div>
        <div id="search-results">
        <% @search_results_questions.last(10).each do |question| %>
            <%= question.content %><br />
        <% end %>
        </div>
    </div>
</div>
    
<% end %>
