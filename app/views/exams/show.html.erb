<div>
    <%= form_tag(exams_search_path, method: "get", remote: true) do %>
        <%= text_field_tag :search, params[:search], placeholder: "Enter search term" %>
        <%= select_tag :time, options_for_select([["<=30m",30],["<=60m",60],[">60m",61]]) %>
        <%= submit_tag "Search" %>
    <% end %>
</div>

<div class="card" id="search-results">
              <div class="card-header">
                <h3 class="card-title">Exam</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Questions</th>
                    <th>Time</th>
                    <th>Result</th>
                  </tr>
                  </thead>
                  <tbody>
                  <% @search_results_exams.each_with_index do |exam, index| %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= exam.name %></td>
                    <td><%= exam.questions.count %></td>
                    <td><%= show_time_in_hour(exam.time) %></td>
                    <td><%= exam.result_average %></td>
                  </tr>
                  <% end %>
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
</div>